//for scroll header css
.scroll_header
    position: fixed;
    width: 100%;
    z-index: 20;
    background: $pink_light
    display: flex;
    // flex-wrap: wrap
    box-shadow: 0 2px 2px 0 rgba(97,97,97,0.22);
    //transform: translateY(-($nav_scrolled_height));
    flex-axis:center


    .nav_btns_wrapper
        color: $pink_deep
    .nav_list_wrapper
        flex-direction: row;
        height: 45px;
        padding: 0;
        max-width: $banner_max_width
        width: 100%;
        justify-content: space-between;

    #logo_img
        width: 125px;
        height: 30px;
        
    .nav_btns_wrapper
        display: flex;
        line-height: $nav_scrolled_height;

    .nav_btns
        position: initial;
    
    .child_category_wrapper
        margin-top: 15px
    .scroll_disappear
        display: none