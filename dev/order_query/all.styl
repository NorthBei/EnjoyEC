/*上面都是複製來的 這邊開始override*/
.order_query_info_table_wrapper
    margin-top: 15px

.do_button,.dialog_button
    size 80px 30px
    border-radius: 5px

.do_button
    color: #D6645F
    background: #F6EAE6
    &:hover,&:active
        color: white
        background: #C8837C 


.dialog_button
    color: white
    background: #C8837C

.empty_button
    visibility: hidden
        
.order_query_info_table tbody tr
