@import "../../node_modules/kouto-swiss"
@require "general"
normalize()


ul
    margin: 0
    padding: 0
    list-style-type: none

a
    text-decoration: none
    color: inherit

input
    border: none
    outline: none

h1,h2,h3,h4,h5,h6,p
    margin: 0

hr
    border: 0;
    
select
    outline: none

button
    border: none
    outline: none
    cursor: pointer
//main css override
html
    height: 100%;
    font-size: 12px
    overflow-x: hidden

body
    min-height: 100%
    display: flex
    flex-direction: column
    font-family: "微軟正黑體"

#main
    flex: 1
    flex:0 0 auto //for IE11
    $main_height = "100vh - "+$desktop_header_height+" - "+$desktop_footer_height
    min-height: calc($main_height);

+media-query( all, max-width $tablet_rwd_width )
    #main
        min-height: initial;
        flex: 1

+media-query( all, max-width $phone_rwd_width )
    body
        overflow-x: hidden