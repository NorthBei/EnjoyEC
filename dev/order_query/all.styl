        color: #8B572A;
        letter-spacing: 0.47px;
        margin-bottom:75px

#apply_return_dialog
    display: none;
    font-size: 15px;
    padding: 55px 95px 67px
    max-width: 500px;

    .user_should_know
        list-style: disc
        margin: 20px 0
        color: #4A4A4A;
        letter-spacing: 0.39px;
        font-weight: 100
        text-align: left;
        li
            margin-bottom: 10px

            a
                color: #D6645F
