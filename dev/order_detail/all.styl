/*order_tables*/
.order_tables_wrapper
    flex: 1

    .split
        border-top: 1px solid #F6EAE6

    .section_title
        text-align: center
        color: #4A4A4A
        font-size: 18px

.order_product_table_wrapper
    padding: 25px
    background: #FFF8F6
    position: relative;
    margin-bottom: 50px;
    display: flex;
    flex-direction: column;

    &:before
        content: "商品";
        color: #d6645f;
        line-height: 40px;
        position: absolute;
        width: 100%;
        background: #f6eae6;
        height: 40px;
        left: 0;
        z-index: 1;

.order_product_table
    z-index: 2;
    position: relative;
    margin-bottom: 15px
    
    th
        &:first-child
            width: 40%

    td
        background: white
        padding: 0

    td[data-th='商品']
        display: flex;
        align-items: center;
        color: #8B572A
        
        a
            text-decoration: underline;
            text-align: left;
            margin-left: 20px;

    td[data-th='單價']
            position: relative;

            .normal_price
                position: absolute;
                width: 100%;
                text-align: center;
                margin-top: 15px;
                text-decoration: line-through;
    td[data-th='顏色']
        img
            size 31px

    tbody
        tr
            color: #4a4a4a
            border: none;
            &:nth-child(even)
                height: 150px
                border: none;
            &:nth-child(odd)
                height: 15px
            &:first-child
                height: 25px
/*order_tables ovrrider rwd*/
