@import "../_general/general"
@import "../_general/dialog/dialog"
//@import "../_general/third_part/slick-1.6.0/slick/slick-theme.css"

$row_border_line_padding = 20px
$row_border_line_color = #F1EFAB
$row_after_layer = 3
$slide_arrow_side_distance = 25px


.bg_skin_light
  background: #FFF8F6

.bg_skin_deep
  background: #F3E0D8

.bg_pink_medium
    background: #C8837C

.bg_pink_deep
    background: #8E5651

#main
    display: flex
    flex-direction: column

#top_banner
    width:100%
    background: #000
    display:inline-flex
    flex-wrap:wrap

.col_left,.col_right
    width:14%;
    display:flex
    flex-direction:column
    order:3;

.col_left
  order:1

.col_center
  width:72%
  order:2
  padding-bottom:43.12%

.row
    width:100%
    padding-bottom:154%
    position:relative

    &:hover:after
        background: rgba(79,51,37,0.7);
    
    &:hover .category_text
        opacity: 1

    &:hover .category_text_en
        transform: translateY(0)

.row:after 
    content: ''
    position: absolute
    width: 100%
    height: 100%
    z-index: $row_after_layer
    transition: background 1.5s ease 0s


.category_text
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    color: #fff;
    text-align: center;
    z-index: ($row_after_layer+2)
    opacity:0
    transition: opacity 1s ease 0s, transform 0.8s ease 0s

.category_text_zhtw
    font-size: $font35
    margin-bottom: 5px

.category_text_en
    font-size: $font18
    transform: translateY(20px)
    transition: inherit

.row>a
    width: 100%;
    display: block;
    height: 100%;
    position: absolute;

    >img
        position: absolute;
        width:100%
        height 100%


.row:hover a::before, .row:hover a::after {
    opacity: 1;
    transform: scale(1);
    z-index: ($row_after_layer + 1);
}

.row a::before {
    border-bottom: 1px solid $row_border_line_color;
    border-top: 1px solid $row_border_line_color;
    transform: scale(0, 1);
}

.row a::after {
    border-left: 1px solid $row_border_line_color ;
    border-right: 1px solid $row_border_line_color ;
    transform: scale(1, 0);
}

.row a::before, .row a::after {
    bottom: $row_border_line_padding;
    content: "";
    left: $row_border_line_padding;
    opacity: 0;
    position: absolute;
    right: $row_border_line_padding;
    top: $row_border_line_padding;
    transition: opacity 0.8s ease 0s, transform 0.8s ease 0s;
    z-index: ($row_after_layer+2);
}

#bottom_banner
    display: flex

.col
    width: 33.3%
    padding-bottom: 18%

#subscribe_newsletters
    display: flex
    flex-axis: center
    flex-direction: column
    color: $pink_medium
    padding: 50px 40px

    &>h1
        font-size: $font20
        margin-bottom: 5px
        
    &>h2
        font-weight: lighter;
        color: #DFA69F
        font-size: $font15
        margin-left: -7px

    &>form,.form
        height: 40px
        max-width: 370px
        width: 100%
        border-radius: 20px
        display: flex
        border: 1px solid $pink_medium
        overflow: hidden
        margin: 15px 0 30px

        &>input[type="eamil"]
            height: inherit
            flex: 1
            padding: 10px 20px
            box-sizing: border-box

            +placeholder()
                color: $pink_deep
                font-size: $font12

    i
        font-size: $font24
        margin: 0 10px
        outline: none

        &:hover
            color: $brown_icon_hover
    
#subscribe_btn
    height: inherit
    width: 100px
    color: white
    background: $pink_medium
    border-left: 1px solid $pink_medium
    cursor: pointer
    border-radius: 0

    &:active
        background: white
        color: $pink_medium

#subscribe_success
    display: none
    padding: 90px 126px

    &>h1
        margin: 0
/*add for third part lib slick http://kenwheeler.github.io/slick/ */
.slick_slide
    position: relative;
    overflow:  hidden
    display: flex;
    height: 0;
    
    img
        height: 100%;

.slick-arrow
    position: absolute
    z-index: 5
    transform: translateY(-50%);
    top: 50%;
    cursor: pointer

.slick-list.draggable
    position: absolute;
    width: 100%;
    display: flex;
    height: 100%

.slick-track
    display: flex;

.slick-dotted.slick-slider
    margin: 0
.slick-dots
    bottom: 10px

#slick-prev,#slick-next
    border-radius: 50%
    size: 30px

    //left/right arrow
#slick-prev
    left: $slide_arrow_side_distance
        
#slick-next
    right: $slide_arrow_side_distance

    //dots
.slick-dots li button:before,
.slick-dots li.slick-active button:before
    color: white

.slick-dots li
    margin: 0

/*add for third part lib slick http://kenwheeler.github.io/slick/ */
+media-query( screen , max-width 1050px , min-width 700px )
    .category_text_zhtw
        font-size: $font22


    .category_text_en
        font-size: $font13

+media-query( screen , max-width 450px )
    #subscribe_newsletters
        &>h1
            font-size: $font16
        &>h2
            font-size: $font12

+media-query( screen , max-width 700px )
    //手機版直接顯示hover效果
    .row

         a
            &:before, &:after
                opacity: 1;
                transform: scale(1);
                z-index: ($row_after_layer + 1);

        
        
         .category_text
            opacity: 1

         .category_text_en
            transform: translateY(0)
    
    .row:after
            background: rgba(79,51,37,0.7);

    .col_center
        width:100%;
        order:1;
    
    .col_left,.col_right
        width:50%;
        order:2;
    

    #bottom_banner
        flex-direction: column
        flex-wrap: wrap
    

    .col
        width: 100%;
        padding-bottom: 54%;
    

    .slick_slide
        padding-bottom: 61%;
    