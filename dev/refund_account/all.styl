@import "../_general/member_section/member_section"

.section_title
    margin-top: 12px;

    .split
        margin: 16px 0

.section_sub_title
    font-size: 16px
    font-weight: 400

input[type = text]
    border: 1px solid #4a4a4a
    
.refund_table
    font-size: 15px
    color: #4A4A4A
    width: 250px
    margin: 60px auto;

    tr
        height: 40px;
    .td_key
        width: 100px;
        white-space: nowrap
    .td_value
        font-weight: 100
        height: 25px
        vertical-align: middle;
   
#bank_name
    width: 100%

.dialog_button_wrapper
    display: flex
    justify-content: center
    margin-bottom: 175px

.dialog_button
    size 80px 30px
    border-radius: 5px
    color: white
    background: #C8837C
    margin: 0 20px

a.dialog_button
    text-align: center
    line-height: 30px;

#dialog
    padding: 45px 0 94px;
    width: 985px;
    display: none
    p
        font-weight: 100
    
        &:nth-of-type(2)
            margin: 20px 0 50px;

#check_dialog
    padding: 50px 130px 80px
    box-sizing: border-box
    display: none
    
    .warning_img
        size: 62px
    &>p
        margin: 25px 0 20px
        font-size: 17px;
        font-weight: 500;
        letter-spacing: 0.5px;
        text-align: center
        width: 240px;
        .notice
            color: #d0011b

    .dialog_button_wrapper
        margin: 0

+media-query( all, max-width $phone_rwd_width )
    .section_title
        margin-top: 0;
    #dialog
        padding: 50px 36px
        width: initial;